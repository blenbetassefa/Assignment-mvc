@model IEnumerable<Web2.Models.Book>

@{
    ViewData["Title"] = "View Books";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>View Books</h1><br /><br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookImg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        var photoPath = "~/images/" + (item.BookImg ?? "no-photo-or-blank-image-icon-loading-images-or-missing-image-mark-image-not-available-or-image-coming-soon-sign-simple");
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookStatus)
            </td>
                <td>
                    <img src="@photoPath" class="card-img-top card-img-custom" asp-append-version="true" width="190px" height="100px"  />
                </td>
            <td>
                @if (item.BookStatus.Equals("Available"))
                {
                    <a asp-controller="Transaction" asp-action="ApplyRequest" class="btn btn-primary" asp-route-id="@item.BookTblId">Request Book</a><b>  </b>                        
                }
                <a asp-action="MemberViewBookDetails" class="btn btn-success" asp-route-id="@item.BookTblId">Details</a>                     


            </td>
        </tr>
}
    </tbody>
</table>
