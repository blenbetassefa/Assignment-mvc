@model Web2.Models.NonDatabaseModels.LoginUser;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>

<link rel="stylesheet" href="~/lib/style.css" />

<body style="background-image: url(../../lib/images/FB_IMG_1640963029779.jpg)">
  
    <!-- content -->
   
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
          
            <div class="col-md-4 offset-sm-4 no-repeat">
                <div class="card  no-repeat" >
                    <div class="card-header">Login</div>
                    <div class="card-body offset-sm-1">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form class="container-fluid">
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "" })
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter the email" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "" })
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-unlock"></i>
                                    </span>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control ", placeholder = "Enter the password", type = "password" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage) </label>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="col-10 offset-1">
                            <button type="submit" value="Login" class="btn btn-sm btn-block btn-danger">
                                <i class="fas fa-sign-in-alt"></i>
                                Login
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
        <!-- //switch -->
    


</body>





















