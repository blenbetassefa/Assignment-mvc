<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- css files -->
    <link rel="stylesheet" href="~/li/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/css/fontawesome-all.css">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style-starter.css">
    <script src="https://kit.fontawesome.com/84b847aa9b.js" crossorigin="anonymous"></script>
</head>
<body>
    <section class="w3l-header">
        <header id="site-header" class="fixed-top">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-dark stroke">

                    <a class="navbar-brand" href="/Home/index">
                        <span class="fa fa-pencil-square-o"></span> Abrehot
                    </a>
                    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item ">
                                @Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link ", style="display:inline" })

                            </li>&nbsp;&nbsp;
                            <li class="nav-item ">
                                @Html.ActionLink("About", "About", "Home", new { @class = "nav-link ", style="display:inline" })
                            </li>&nbsp;&nbsp;
                            <li class="nav-item">
                                @Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link ", style="display:inline" })

                            </li>&nbsp;&nbsp;
                            <li class="nav-item">
                                <i class="fas fa-id-badge"></i>
                                @Html.ActionLink("Login", "Login", "Home", new { @class = "nav-link ", style="display:inline" })

                            </li>&nbsp;&nbsp;
                        </ul>
                    </div>
                    <!-- toggle switch for light and dark theme -->
                    <div class="mobile-position">
                        <label class="theme-selector">
                            <input type="checkbox" id="themeToggle">
                            <i class="gg-sun"></i>
                            <i class="gg-moon"></i>
                        </label>
                    </div>
                    <!-- //toggle switch for light and dark theme -->
                </nav>
            </div>
        </header>
        <!--/header-->
    </section>
    <div>
        @RenderBody()
    </div>
</body>
</html>
